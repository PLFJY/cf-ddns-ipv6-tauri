{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cloudflare IPv6 DDNS",
  "version": "0.1.4",
  "identifier": "dev.plfjy.cloudflare-ipv6-ddns",
  "build": {
    "beforeDevCommand": "pnpm web:dev --host",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Cloudflare IPv6 DDNS",
        "label": "main",
        "width": 1200,
        "height": 860,
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico", "icons/icon.png"]
  }
}
